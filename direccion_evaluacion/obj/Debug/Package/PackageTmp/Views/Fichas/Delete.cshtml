@model direccion_evaluacion.Models.Ficha

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <nav class="navbar-inverse">

        <center>
            <h2> <i class="fa fa-user"> </i> <b>Administración de Fichas</b></h2>
        </center>

    </nav>
</div>

<h2>Eliminar ficha</h2>

<h3>¿Esta seguro que desea eliminar esta ficha?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Nombre</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            <b># Módulo</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Modulo.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Eliminar" class="btn btn-success" />
                </div>
            </div>
        </div>

    }
</div>
<div class="form-actions no-color">

    @Html.ActionLink("Regresar a fichas", "Index", null, new { @class = "btn btn-danger" })
</div>
