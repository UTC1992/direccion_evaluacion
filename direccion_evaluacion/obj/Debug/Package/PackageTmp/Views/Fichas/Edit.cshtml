@model direccion_evaluacion.Models.Modelos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <nav class="navbar-inverse">

        <center>
            <h2> <i class="fa fa-user"> </i> <b>Administración de Fichas</b></h2>
        </center>

    </nav>
</div>

<h2>Editar ficha</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ficha.id)

        <div class="form-group">
            <b> @Html.LabelFor(model => model.Ficha.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ficha.nombre, "Nombre", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ficha.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ficha.Modulo, "# Módulo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="moduloId">
                    <option>@Model.Ficha.Modulo.nombre</option>
                    @foreach (var item in Model.ObjModulo)
                    {
                        <option value="@item.id">@item.nombre</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a fichas", "Index", null, new { @class = "btn btn-danger" })
</div>
