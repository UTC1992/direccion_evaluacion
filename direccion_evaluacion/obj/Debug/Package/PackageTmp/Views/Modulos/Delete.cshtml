@model direccion_evaluacion.Models.Modulo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <nav class="navbar-inverse">

        <center>
            <h2> <i class="fa fa-user"> </i> <b>Administrar Módulos</b></h2>
        </center>

    </nav>
</div>
<h2>Eliminar módulo</h2>

<h3>¿Esta seguro que desea eliminar este módulo?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Nombre</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Eliminar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>

<div>

    @Html.ActionLink("Regresar a módulos", "Index", null, new { @class = "btn btn-danger" })

</div>


