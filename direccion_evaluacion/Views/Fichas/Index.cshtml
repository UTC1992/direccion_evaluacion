@model IEnumerable<direccion_evaluacion.Models.Ficha>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <nav class="navbar-inverse">
        <br />
        <br />
        

    </nav>
</div>

<div class="container">
    <br />
    <center>
        <h2> <i class="fa fa-user"> </i> <b>Administrar Fichas</b></h2>
    </center>
    <br />
    <div class="table-responsive">
        <div class="panel-heading">
            <table class="table">
                <tr>
                    <td>
                        <a align="right" class="btn btn-primary" href="/Fichas/Create">
                            <i class="fa fa-list"> Nueva Ficha</i>
                        </a>
                    </td>

                    <td class="text-right">
                        <a class="btn btn-danger" href="/Modulos/Index"><span class="glyphicon glyphicon-circle-arrow-left"></span> Regresar</a>
                    </td>
                </tr>
            </table>
        </div>

        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    <b>Ficha</b>
                </th>
                <th>
                    <b># Módulo</b>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modulo.nombre)
                    </td>
                    <td>
                        <center>
                            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-primary" }) |
                            <!---@Html.ActionLink("Details", "Details", new { id = item.id })-->
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                        </center>
                    </td>
                </tr>
            }

        </table>
        <div class="panel-heading">
            <a align="right" class="btn btn-success" href="/Titulos/Index">
                <i class="fa fa-list"> Generar titulos para la ficha</i>
            </a>

        </div>
    </div>
</div>
